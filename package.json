{
	"name": "base-css-stylesheet",
	"version": "1.0.0",
	"private": true,
	"description": "A work-in-progress base CSS stylesheet, which includes both normalize/reset and opinionated base styles.",
	"keywords": [
		"base",
		"baseline",
		"css",
		"defaults",
		"normalization",
		"normalize-css",
		"normalize",
		"normalizer",
		"opinionated-defaults",
		"opinionated",
		"sanitization",
		"sanitize-css",
		"sanitize",
		"sanitizer"
	],
	"homepage": "https://github.com/germanfrelo/base-css-stylesheet#readme",
	"bugs": "https://github.com/germanfrelo/base-css-stylesheet/issues",
	"repository": "github:germanfrelo/base-css-stylesheet",
	"license": "MIT",
	"author": "Germán Freixinós López",
	"type": "module",
	"main": "",
	"scripts": {
		"build": "clean:build && npm run postcss",
		"clean:build": "rimraf dist && mkdir dist",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "npm run lint:css",
		"lint:fix": "npm run lint:css:fix",
		"lint:css": "stylelint --formatter verbose \"**/*.css\"",
		"lint:css:fix": "npm run lint:css -- --fix",
		"prepare": "husky",
		"postcss": "postcss src/base.css -o dist/base.css",
		"start": "npm run build && npm run watch",
		"watch": "concurrently \"npm run postcss -- --watch\""
	},
	"lint-staged": {
		"*.css": [
			"stylelint",
			"prettier --write"
		],
		"!(*.css)": [
			"prettier --write --ignore-unknown"
		]
	},
	"devDependencies": {
		"concurrently": "9.2.1",
		"husky": "9.1.7",
		"lint-staged": "16.2.7",
		"postcss": "8.5.6",
		"postcss-cli": "11.0.1",
		"postcss-discard-comments": "7.0.5",
		"postcss-import": "16.1.1",
		"prettier": "3.6.2",
		"rimraf": "6.1.2",
		"stylelint": "16.13.2",
		"stylelint-config-recess-order": "6.0.0",
		"stylelint-config-standard": "37.0.0",
		"stylelint-no-unsupported-browser-features": "8.0.2"
	}
}
